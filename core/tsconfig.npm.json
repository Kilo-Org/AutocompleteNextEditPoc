{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext", "ES2021"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noEmitOnError": false,
    "types": ["node"],
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "incremental": true
  },
  "include": ["./**/*.ts", "**/*.js", "./**/*.d.ts"],
  "exclude": [
    "dist",
    "test",
    "**/test/**",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.vitest.ts",
    "**/*.test.tsx",
    "**/*.spec.tsx",
    "autocomplete/context/root-path-context/testUtils.ts"
  ]
}
