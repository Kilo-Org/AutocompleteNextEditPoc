{
  "name": "continue",
  "version": "1.1.0",
  "private": true,
  "description": "Autocomplete and NextEdit only - streamlined Continue with GUI, chat, and other features removed",
  "author": "Continue Dev, Inc",
  "license": "Apache-2.0",
  "scripts": {
    "test": "vitest run --config core/vitest.config.ts",
    "test:watch": "vitest --config core/vitest.config.ts",
    "lint": "eslint core --ext ts",
    "lint:fix": "eslint core --ext ts --fix",
    "typecheck": "tsgo --noEmit",
    "tsc:watch": "tsgo --watch --noEmit --pretty",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\" --ignore-path .gitignore --ignore-path .prettierignore",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\" --ignore-path .gitignore --ignore-path .prettierignore",
    "deadcode:knip": "knip",
    "deadcode:exports": "ts-prune",
    "prepare": "husky"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.62.0",
    "@aws-sdk/client-bedrock-runtime": "^3.779.0",
    "@aws-sdk/credential-providers": "^3.778.0",
    "@typescript/native-preview": "^7.0.0-dev.20251009.1",
    "async-mutex": "^0.5.0",
    "comment-json": "^4.2.3",
    "diff": "^7.0.0",
    "dotenv": "^16.4.5",
    "fastest-levenshtein": "^1.0.16",
    "google-auth-library": "^9.14.2",
    "handlebars": "^4.7.8",
    "ignore": "^7.0.5",
    "js-tiktoken": "^1.0.8",
    "lru-cache": "^11.0.2",
    "openai": "^5.13.1",
    "p-limit": "^6.1.0",
    "quick-lru": "^7.0.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "svg-builder": "^2.0.0",
    "tree-sitter-wasms": "^0.1.11",
    "uri-js": "^4.4.1",
    "uuid": "^9.0.1",
    "web-tree-sitter": "^0.21.0",
    "winston": "^3.17.0",
    "yaml": "^2.4.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/diff": "^7.0.1",
    "@types/follow-redirects": "^1.14.4",
    "@types/jquery": "^3.5.29",
    "@types/jsdom": "^27.0.0",
    "@types/json-schema": "^7.0.15",
    "@types/lodash": "^4.17.20",
    "@types/mustache": "^4.2.5",
    "@types/uuid": "^9.0.7",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^8",
    "husky": "^9.1.7",
    "myers-diff": "^2.1.0",
    "prettier": "^3.3.3",
    "shiki": "^3.6.0",
    "typescript": "^5.6.3",
    "vitest": "^3.1.4"
  },
  "engine-strict": true,
  "engines": {
    "node": ">=20.19.0"
  }
}
